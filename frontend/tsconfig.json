{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "strict": true,              // Enforce strict typing (no implicit any)
    "noImplicitAny": true,       // Disallow 'any' by accident
    "noUncheckedIndexedAccess": true
  },
  "include": ["src"]
}
