# App
ENV=dev                         # Environment name
PORT=8000                       # Backend port

# Google Maps (needed for POI verification & routing)
GOOGLE_MAPS_API_KEY=

# --- LLM providers ---
# Provide at least one provider key to enable LLM planning
OPENAI_API_KEY=                # If using OpenAI
OPENAI_MODEL=gpt-4o-mini       # Default OpenAI model (adjust if needed)

ANTHROPIC_API_KEY=             # If using Anthropic
ANTHROPIC_MODEL=claude-3-haiku-20240307  # Default Anthropic model

GEMINI_API_KEY=                # If using Google Gemini
GEMINI_MODEL=gemini-1.5-flash  # Default Gemini model

# Provider priority (comma-separated). The router will try in order.
LLM_ORDER=gemini,openai,anthropic

# --- Providers ---
HOTEL_API_KEY=
HOTEL_API_HOST=
HOTEL_API_ENDPOINT=

# Verifier filter
MIN_RATING=3.9

# Budget heuristics (when no provider)
DEFAULT_FOOD_PER_DAY=35
DEFAULT_TRANSPORT_PER_DAY=20
DEFAULT_TICKETS_PER_DAY=25
DEFAULT_MISC_PER_DAY=15

# --- DB & Auth ---
DATABASE_URL=sqlite+aiosqlite:///./app.db   # Async SQLite for dev
JWT_SECRET=please_change_me
JWT_EXPIRE_MINUTES=120
JWT_ALG=HS256

# --- RAG ---
RAG_ENABLED=true

# --- Booking (optional provider) ---
BOOKING_API_KEY=
BOOKING_API_HOST=
BOOKING_API_ENDPOINT=